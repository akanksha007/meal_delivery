<p id="notice"><%= notice %></p>

<h1>Random Lunch</h1>

<%= form_with(url: create_random_lunch_path, local: true) do |form| %>
  <table>
    <thead>
      <tr>
        <th>Select Employee</th>
        <th>Name</th>
        <th>Address</th>
        <th>Preference</th>
        <th colspan="5"></th>
      </tr>
    </thead>

    <tbody>
        <% @employees.each do |employee| %>
          <tr>
            <td><%= check_box_tag('employee_ids[]', employee.id) %></td>
            <td><%= employee.name %></td>
            <td><%= employee.address %></td>
            <td><%= employee.preference %></td>
            <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
          </tr>
        <% end %>
    </tbody>
  </table>
  <%= form.submit %>
<% end %>

<br>
